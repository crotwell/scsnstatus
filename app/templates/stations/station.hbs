

<h3>Station: {{@model.station.codes}} <LinkTo @route="stations">Show All</LinkTo></h3>
<span>Choose Station: </span>
<select onchange={{action 'changeStation'  value="target.value"}}>
  {{#each model.stationList as |sta|}}
    {{#if sta.isActive}}
      <option value={{sta.id}} selected={{eq sta model.station}}>{{sta.stationCode}}</option>
    {{/if}}
  {{/each}}
</select>

<ShowHide @divTitle="Map">
  <div class="horizontal">
    <div>
      <QuakeStationMap class="smallmap"  @stationlink='stations.station'  @stations={{array @model.station}}  @center={{@model.center}} @zoomLevel=7 >

      </QuakeStationMap>
    </div>
    <div>
      <ul>
        <li>Name: {{@model.station.name}}</li>
        <li>Desc: {{@model.station.description}}</li>
        <li>Start: {{@model.station.startTime}}</li>
        <li>End: {{@model.station.endTime}}</li>
        <li>Lat: {{@model.station.latitudeFormatted}}</li>
        <li>Lon: {{@model.station.longitudeFormatted}}</li>
        <li>Elev: {{@model.station.elevation}}</li>
      </ul>
    </div>
  </div>
</ShowHide>

<span>Choose Plot: </span>
<select onchange={{action 'changePlot'  value="target.value"}}>
  {{#each model.plotTypes as |plot|}}
      <option value={{plot}} selected={{eq plot plotType}}>{{plot}}</option>
  {{/each}}
</select>


{{outlet}}
